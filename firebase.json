{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
        {
            "source": "**",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, max-age=0"
                }
            ]
        }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5003
    },
    "database": {
      "port": 3333
    },
    "ui": {
      "enabled": true
    }
  }
}